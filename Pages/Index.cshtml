@page
@model IndexModel
@{
    ViewData["Title"] = "Doppler ASP.NET Core Web App";
}

<div class="row justify-content-center">
    <div class="col-6 text-center">
        <h1 class="h4">Doppler Secrets</h1>
        <p class="lead">Example using the Doppler CLI to hydrate a <code>Doppler</code> class with JSON or environment variables via <a href="https://docs.microsoft.com/aspnet/core/fundamentals/configuration">Configuration providers</a>.</p>
        <table class="table table-dark table-bordered">
            <tr>
                <td>Doppler Project</td>
                <td>@Model.Doppler.DopplerProject</td>
            </tr>
            <tr>
                <td>Doppler Environment</td>
                <td>@Model.Doppler.DopplerEnvironment</td>
            </tr>
            <tr>
                <td>Doppler Config</td>
                <td>@Model.Doppler.DopplerConfig</td>
            </tr>
            <tr>
                <td>Debug</td>
                <td>@Model.Doppler.Debug</td>
            </tr>
            <tr>
                <td>Logging</td>
                <td>@Model.Doppler.Logging</td>            
            </tr>
            <tr>
                <td>Server HostName</td>
                <td>@Model.Doppler.Server.HostName</td>
            </tr>
            <tr>
                <td>Server Port</td>
                <td>@Model.Doppler.Server.Port</td>
            </tr>
        </table>
    </div>
</div>
